# frozen_string_literal: true
source 'https://rubygems.org'

ruby '2.5.0'

# Db
gem 'sequel'
gem 'pg'

# Hanami
gem 'hanami-router'
gem 'hanami-controller'
gem 'hanami-helpers'

# Trailblazer
gem 'dry-validation'
gem 'trailblazer', '~> 2.0'
gem 'trailblazer-loader'
gem 'trailblazer-cells'
gem 'cells-erb'
gem 'will_paginate'

# Web server
gem 'puma'

# Cli
gem 'thor'

# Css
gem 'sass'

# Translation
gem 'r18n-core'

# Sitemap
gem 'sitemap_generator'

group :development do
  # Rerun web server when code changes (see docker-compose.dev.yml)
  gem 'rerun'

  # Debugger
  gem 'pry'
  gem 'better_errors'
  gem 'binding_of_caller'

  # Console
  gem 'rack-console'
end